  $(function() {
		//删除单个学生
		$(".delBtn").click(
				function() {
					var tutorid = $(this).attr("tutorid");
					$.messager.confirm('取消申请', '您确定要取消申请工号为“' + tutorid
							+ '”的导师吗?<br />取消后您可以申请其他导师。', function(
							r) {
						if (r) {
							$.post("tutor_delete", {
								tutorId : tutorid
							}, function(data) {
								if (data.success) {
									location.reload();
								} else {
									$.messager.alert("错误", "取消申请失败...", "Error");
								}
							}, 'json');
						}
					});
				});
	});
  </script>

<style type="text/css">
.titleStyle {
	font-size: 20px;
}
</style>

<title>导师查询</title>
</head>
<body>
	<div class="center1000">
		<div class="firstTitle">导师列表</div>
		<div class="toolbar">
			<%-- <div style="margin-top: 10px">
