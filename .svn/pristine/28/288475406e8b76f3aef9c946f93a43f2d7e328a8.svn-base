	private String createWhere(){
		String where = "1=1 ";
		if(courseType != null && !courseType.equals("请选择")){
			where += "and courseType='" + courseType+"'";
		}		
		if(courseName != null && !"".equals(courseName)){
			where += " and courseName='" + courseName+"'";
		}
		return where;
	}
	
