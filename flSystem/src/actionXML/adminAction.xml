<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 管理员 -->
<struts>
	 <package name="admin" extends="default" namespace="/admin">
	 	<!-- 管理首页 -->
		<action name="index">
			<result>/admin/index.jsp</result>
		</action>
		<!-- 文件上传 -->
		<action name="file_*" class="cn.nwsuaf.util.FileUploadAction" method="{1}">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<!-- 系统公告 -->
		<action name="notice_*" class="cn.nwsuaf.action.admin.NoticeAdminAction" method="{1}">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
		<!-- 学生信息管理 -->
		<action name="student_*" class="cn.nwsuaf.action.admin.StudentAction" method="{1}">
			<result name="list">
				/admin/student/student_list.jsp
			</result>
			<result name="list1">
				/admin/student/student_list1.jsp
			</result>			
			<result name="edit">
				/admin/student/student_edit.jsp
			</result>
			<result name="save" type="redirect">
				/admin/student_list
			</result>
			<result name="delete"  type="json"></result>
			<result name="upload" type="json"></result>
		</action>
		
		<!-- 用户信息 -->
		<action name="user_*" class="cn.nwsuaf.action.admin.UserAction" method="{1}">
			<result name="exist" type="json" />		    
		</action>
    </package>
</struts>